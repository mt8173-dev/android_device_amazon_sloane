<!-- Layout for an static item displayed in the 2 pane dialog. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:minHeight="@dimen/lb_dialog_list_item_min_height_small"
    android:orientation="vertical" >

    <View
        android:id="@+id/static_hairline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lb_dialog_list_item_divider_color"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/action_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/lb_dialog_list_item_full_start_padding"
        android:layout_marginEnd="@dimen/lb_dialog_list_item_full_end_padding"
        android:alpha="@string/lb_dialog_list_item_unselected_text_alpha"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:maxLines="@integer/lb_dialog_action_title_min_lines"
        android:textColor="@color/lb_dialog_list_item_unselected_text_color"
        android:textSize="@dimen/lb_dialog_list_item_description_font_size" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
